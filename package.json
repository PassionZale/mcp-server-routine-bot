{
  "name": "@code-sugar/mcp-server-routine-bot",
  "version": "0.0.11",
  "type": "module",
  "author": "Lei Zhang (https://www.lovchun.com)",
  "description": "A Model Context Protocol (MCP) server for routine bot operations.",
  "bin": {
    "mcp-server-routine-bot": "dist/index.js"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc && tsc-alias && shx chmod +x dist/*.js",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "inspector": "dotenv -e .env -- mcp-inspector tsx src/index.ts",
    "prepare": "npm run build",
    "release": "npm publish --registry https://registry.npmjs.org --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PassionZale/mcp-server-routine-bot.git"
  },
  "keywords": [
    "mcp-server",
    "tapd",
    "jenkins"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PassionZale/mcp-server-routine-bot/issues"
  },
  "homepage": "https://github.com/PassionZale/mcp-server-routine-bot#readme",
  "files": [
    "dist",
    "assets/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "mcp": {
    "logo": "./assets/logo.png",
    "icons": {
      "16": "./assets/icon-16x16.png",
      "32": "./assets/icon-32x32.png"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.2.0",
    "concurrently": "^9.2.0",
    "dotenv-cli": "^10.0.0",
    "shx": "^0.4.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
